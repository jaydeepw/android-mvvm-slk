<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="NameStyle">
        <item name="android:textColor">@color/name</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="UsernameStyle" parent="NameStyle">
        <item name="android:textColor">@color/username</item>
    </style>


</resources>
